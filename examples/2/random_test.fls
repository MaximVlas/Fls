import "std/random.fls";

println("--- Testing Random Library ---");

println("\n--- Testing randFloat() ---");
var r_float = randFloat();
println("A random float between 0 and 1: " + toString(r_float));
// Basic check: ensure it's within the expected range
if (r_float >= 0 and r_float < 1) {
    println("randFloat() is in the correct range.");
} else {
    println("randFloat() is OUT of the correct range.");
