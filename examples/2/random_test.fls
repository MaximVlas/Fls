println("\n--- Testing randInt(min, max) ---");
var r_int = randInt(1, 10);
println("A random integer between 1 and 10: " + toString(r_int));
// Basic check: ensure it's within the expected range
if (r_int >= 1 and r_int <= 10) {
    println("randInt(1, 10) is in the correct range.");
} else {
    println("randInt(1, 10) is OUT of the correct range.");
}

var r_int2 = randInt(-5, 5);
println("A random integer between -5 and 5: " + toString(r_int2));
if (r_int2 >= -5 and r_int2 <= 5) {
