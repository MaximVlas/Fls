
// factorial.fls

fun factorial(n) {
  if (n <= 1) {
    return 1;
  }
  return n * factorial(n - 1);
}

var num = 7;
println ("Calculating factorial of");
println (num);

var result = factorial(num);
println ("Result:");
println (result); // Should be 5040

